<h1><%= @restaurant.name %></h1>

<h2>Menus</h2>

<%= form_tag restaurant_menus_path(@restaurant.id) do %>
  <%= text_field_tag :name, nil, placeholder: 'menu name' %>
  <%= submit_tag 'add menu' %>
<% end %>

<ul>
  <% @restaurant.menus.each do |menu| %>
    <li><%= link_to menu.name, edit_restaurant_menu_path(@restaurant.id, menu.id)%></li>
  <% end %>
</ul>

<h2><%= link_to 'Tables', restaurant_tables_path(@restaurant.id) %> (<%= @restaurant.tables.count %>)</h2>
<%= form_tag "/restaurants/#{@restaurant.id}/tables", method: 'post' do %>
  <%= label_tag :max_seats, 'seats' %>
  <%= select_tag(:max_seats, options_for_select([1,2,3,4])) %>
  <%= submit_tag 'add table' %>
<% end %>

<h2><%= link_to 'Meals/Stats', restaurant_meals_path(@restaurant.id) %></h2>
