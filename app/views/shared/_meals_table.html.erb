
  <table class='table table-hover table-condensed'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Total Price</th>
        <th>Menu Items</th>
        <th>Duration</th>
        <th>Diners</th>
        <th>Table</th>
      </tr>
    </thead>
    <tbody>
      <% @meals.each do |meal| %>
        <tr>
          <td><%= meal.created_at.httpdate %></td>
          <td>$<%= meal.price %></td>
          <td>
            <% meal.menu_items.each do |item| %>
              <a class='modal-link' href='' id='<%= item.id %>' data='item' data-toggle="modal" data-target="#myModal"><%= item.name %></a>
            <% end %>
          </td>
          <td><%= (meal.duration / 60.0).round(2) %> mins</td>
          <td><%= meal.diners %></td>
          <td><a class='modal-link' href='' id='<%= meal.table.id %>' data='table' data-toggle="modal" data-target="#myModal"><%= meal.table.number %></a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
