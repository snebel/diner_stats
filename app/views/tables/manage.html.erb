<%= stylesheet_link_tag 'tables' %>

<h1 id='<%= @restaurant.id %>'><%= link_to @restaurant.name, restaurant_path(@restaurant) %> Tables</h1>

<form id='configure'><%= button_tag 'configure tables', id: 'configure-seats', class: 'btn btn-warning btn-sm' %></form>

<div class="row">
  <div class='col-md-10'>
    <% @tables.each do |table| %>
      <div class='table container' id='<%= table.id %>' style="left: <%= "#{table.left || 0}px"  %>; top: <%= "#{table.top || 150}px" %>;">
        Table <%= table.number %>
        <form class='seat-table'>
          <%= select_tag(:diners, options_for_select(Array(1..table.max_seats).reverse)) %></br>

          <%= button_tag 'Seat Table', class: 'create-meal btn btn-primary btn-sm' %>
        </form>

        <form class='edit-meal'>
          <%= button_tag 'Add Items', class: 'add-item btn btn-sm btn-success' %>
          <h5 value=0>Total: $0</h5>
          <%= button_tag 'end', class: 'end-meal btn btn-xs btn-primary' %> 
        </form>

      </div>
    <% end %>
  </div>

  <div class='col-md-2' style='border: 1px solid grey'>
    <h2>Menu</h2>
    <form id='menu-items'>
    <% @restaurant.menu_items.each do |item| %>
      <input type='checkbox' value='<%= item.id %>'> <%= "#{item.name[0..9]} $#{item.price}" %></br>
    <% end %>
    </form>
    </ul>
  </div>

</div>

<%= javascript_include_tag '//code.jquery.com/ui/1.10.4/jquery-ui.js' %>
<%= javascript_include_tag 'manage_tables' %>

