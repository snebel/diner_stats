
<h1>All Tables at <%= @restaurant.name %></h1>

<table class='table table-hover table-condensed'>
	<tr>
		<th>Num</th>
		<th>Seats</th>
		<th># Meals</th>
		<th>Price/Meal</th>
		<th>Price/Customer</th>
		<th>Avg. Meal Time</th>
	</tr>
	<% @tables.each do |table| %>
		<tr>
			<td><%= link_to table.number, table_path(table.id) %></td>
			<td><%= table.max_seats %></td>
			<td><%= table.meals.count %></td>
			<td>$<%= table.avg_price %></td>
			<td>$<%= table.avg_customer_price %></td>
			<td><%= table.avg_meal_time %> mins</td>
			<td><%= button_tag 'Delete', method: 'delete', controller: 'tables', action: 'destroy', class: 'btn btn-primary btn-xs' %></td>
		</tr>
	<% end %>
</table>