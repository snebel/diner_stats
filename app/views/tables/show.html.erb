<h1>Table <%= "#{@table.id} at #{@table.restaurant.name} (#{@table.max_seats} seats)" %></h1>

<h3>Average Seats: <%= @avg_seats %></h3>
<h3>Average Duration: <%= @avg_duration %> minutes</h3>
<h3>Average Meal Price: $<%= @avg_price %></h3>	
<h3>Average Price/Customer: $<%= @avg_customer_price %></h3>	

<b>Meals</b>
<table border='1px'>
	<tr>
		<th>Date</th>
		<th>Diners</th>
		<th>Menu Items</th>
		<th>Price ($)</th>
		<th>Minutes</th>
		<th>Table ID</th>
	</tr>
	<% @meals.each do |meal| %>
		<tr>
			<td><%= meal.created_at.httpdate %></td>
			<td><%= meal.diners %></td>
			<td>
				<% meal.menu_items.each do |item| %>
					<%= link_to item.name, menu_item_path(item.id) %>
				<% end %>
			</td>
			<td><%= meal.price %></td>
			<td><%= (meal.duration / 60.0).round(2) %></td>
			<td><%= meal.table_id %></td>
		</tr>
	<% end %>
</table>