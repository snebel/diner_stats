<h1><%= @item %></h1>

<h3>Frequency: Ordered in <%= ((@meals.count.to_f / Meal.count)*100).round(1) %>% of meals</h3>

<table border='1px'>
	<tr>
		<th>Date</th>
		<th>Diners</th>
		<th>Menu Items</th>
		<th>Price ($)</th>
		<th>Minutes</th>
		<th>Table ID</th>
	</tr>
	<% @meals.each do |meal| %>
		<tr>
			<td><%= meal.created_at.httpdate %></td>
			<td><%= meal.diners %></td>
			<td>
				<% meal.menu_items.each do |item| %>
					<%= link_to item.name, menu_item_path(item.id) %>
				<% end %>
			</td>
			<td><%= meal.price %></td>
			<td><%= (meal.duration / 60.0).round(2) %></td>
			<td><%= meal.table_id %></td>
		</tr>
	<% end %>
</table>