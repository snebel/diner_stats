
// ajax for seating a table/creating a meal
var restaurant_id = $('h1')[0].id
$('.create-meal').on('click', function(e){
  e.preventDefault();
  table = $(e.target).parent().parent();
  var table_id = table.attr('id');
  var diners = table.children('form').children('#diners').val();
  
  $.ajax({
    method: 'post',
    url: '/tables/' + table_id +'/meals',
    dataType: 'json',
    data: {restaurant_id: restaurant_id, diners: diners},
    success: function(data){
      $('#'+table_id+' .seat-table').hide();
      $('#'+table_id+' .edit-meal').show();
      // table.css('background-color', 'red');
      table.children('.edit-meal')
        .children('.end-meal')
        .attr('id', data.id);
    },
    fail: function(data){
      console.log('seating failed')
    }
  });
});

//ajax for ending a meal
$('.end-meal').on('click', function(e){
  e.preventDefault();
  var $table = $(e.target).parent().parent() //$($(e.target).parent()[0]);
  var table_id = $table.attr('id')
  var $price = $table.children('h5')
  $.ajax({
    method: 'put',
    url: '/tables/' + table_id + '/meals/' + e.target.id,
    dataType: 'json',
    data: {price: $price.text()},
    success: function(data){
      $('#'+table_id+' .edit-meal').hide();
      $('#'+table_id+' .seat-table').show();
      $('#'+table_id+' .edit-meal').children('h5').text(0);
      // $table.css('background-color', 'lightgreen');
    },
    error: function(data){
      console.log(data);
    }
  });
})
var table;
//ajax for adding items to a meal
$('.add-item').on('click', function(e){
  e.preventDefault();
  $table = $($(e.target).parent()[0]);
  var meal_id = $table.children('.end-meal')[0].id
  var item_ids = []
  $('input:checked').each(function(){
    item_ids.push($(this).val());
  });

  if (item_ids.length > 0) {
    $.ajax({
      method: 'post',
      url: '/meal_memberships',
      dataType: 'json',
      data: {meal_id: meal_id, menu_item_ids: item_ids},
      success: function(data){
        $('input:checked').removeAttr('checked');
        // update price of meal
        var header = $table.children('h5');
        var price = parseFloat(header.text());
        header.text(price + data);
      },
      error: function(data){
        console.log('adding item failed');
      }
    });
  }
})

var draggable = false;

function makeDraggable(draggable){
  if (draggable) {
    $( ".table" ).draggable();
  }
  else {
    $('.draggable').draggable({cancel : 'div'});
  }
}

var button = $('<button>').text('save')
  .attr('id', 'save')
  .attr('class', 'btn btn-sm btn-warning')
  .css('margin-left', '7px');
//configure seats
$('#configure-seats').on('click', function(e){
  e.preventDefault();
  draggable = !draggable
  makeDraggable(draggable);
  $('#configure').append(button);

  $('#save').on('click', function(e){
    e.preventDefault();
    $('#save').remove();
    // var tables = tablePositions();

    $.ajax({
      method: 'post',
      url: '/tables/seating',
      dataType: 'json',
      data: {tables: tablePositions()},
      success: function(data){
        console.log('seating success')
      },
      error: function(data){
        console.log('configuring seats failed');
      }
    });
  });
});

function tablePositions(){
  var table_data = [];
  $('.table').each(function(idx, e){
    var id = $(e).attr('id');
    var left = $(e).css('left').replace(/[^-\d\.]/g, '');
    var top = $(e).css('top').replace(/[^-\d\.]/g, '');
    table_data.push([id, left, top]);
  });
  return table_data;
}

