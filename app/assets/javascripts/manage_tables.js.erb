
// ajax for seating a table/creating a meal
var restaurant_id = $('h1')[0].id
$('.create-meal').on('click', function(e){
  e.preventDefault();
  table = $(e.target).parent().parent();
  diners = table.children('form').children('#diners').val();
  $.ajax({
    method: 'post',
    url: '/tables/' + table.attr('id') +'/meals',
    dataType: 'json',
    data: {restaurant_id: restaurant_id, diners: diners},
    success: function(data){
      console.log(data);
      table.css('background-color', 'red');
      table.children('.end-meal').attr('id', data.id);
      table.children('h5').html('0');
    },
    fail: function(data){
      console.log('seating failed')
    }
  });
});

//ajax for ending/updating a meal
$('.end-meal').on('click', function(e){
  e.preventDefault();
  var $table = $($(e.target).parent()[0]);
  var $price = $table.children('h5')

  $.ajax({
    method: 'put',
    url: '/tables/' + $table.id + '/meals/' + e.target.id,
    dataType: 'json',
    data: {price: $price.text()},
    success: function(data){
      $price.remove();
      $table.css('background-color', 'lightgreen');
    },
    error: function(data){
      console.log('end meal failed');
    }
  });
})
